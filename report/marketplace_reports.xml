        <!-- Vendor Report -->
        <record id="action_report_marketplace_vendor" model="ir.actions.report">
            <field name="name">Vendor Summary</field>
            <field name="model">marketplace.vendor</field>
            <field name="report_type">qweb-pdf</field>
