<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vendor Payout Wizard Form -->
        <record id="view_marketplace_vendor_payout_wizard_form" model="ir.ui.view">
            <field name="name">marketplace.vendor.payout.wizard.form</field>
            <field name="model">marketplace.vendor.payout.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Payout">
                    <sheet>
                        <group>
                            <field name="vendor_id"/>
                            <field name="commission_ids" widget="many2many_tags"/>
                            <field name="total_amount" readonly="1"/>
                        </group>
                        <group>
                            <field name="payout_date"/>
                            <field name="payment_method"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create Payout" type="object" name="action_create_payout" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>