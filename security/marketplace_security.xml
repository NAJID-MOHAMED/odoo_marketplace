<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Categories -->
        <record id="module_marketplace_category" model="ir.module.category">
            <field name="name">Marketplace</field>
            <field name="description">Marketplace Platform Management</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groups -->
        <record id="group_marketplace_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_marketplace_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_marketplace_vendor" model="res.groups">
            <field name="name">Vendor</field>
            <field name="category_id" ref="module_marketplace_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <record id="group_marketplace_customer" model="res.groups">
            <field name="name">Customer</field>
            <field name="category_id" ref="module_marketplace_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <record id="group_marketplace_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_marketplace_category"/>
            <field name="implied_ids" eval="[(4, ref('group_marketplace_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules - Vendor -->
        <record id="marketplace_vendor_rule_own" model="ir.rule">
            <field name="name">Vendor: Own Records</field>
            <field name="model_id" ref="model_marketplace_vendor"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_marketplace_vendor'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="marketplace_vendor_rule_manager" model="ir.rule">
            <field name="name">Vendor: Manager All Access</field>
            <field name="model_id" ref="model_marketplace_vendor"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_marketplace_manager'))]"/>
        </record>

        <!-- Record Rules - Product -->
        <record id="marketplace_product_rule_vendor" model="ir.rule">
            <field name="name">Product: Vendor Own Products</field>
            <field name="model_id" ref="model_marketplace_product"/>
            <field name="domain_force">[('vendor_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_marketplace_vendor'))]"/>
        </record>

        <record id="marketplace_product_rule_customer" model="ir.rule">
            <field name="name">Product: Customer Published</field>
            <field name="model_id" ref="model_marketplace_product"/>
            <field name="domain_force">[('state', '=', 'published')]</field>
            <field name="groups" eval="[(4, ref('group_marketplace_customer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rules - Order -->
        <record id="marketplace_order_rule_vendor" model="ir.rule">
            <field name="name">Order: Vendor Own Orders</field>
            <field name="model_id" ref="model_marketplace_order"/>
            <field name="domain_force">[('vendor_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_marketplace_vendor'))]"/>
        </record>

        <record id="marketplace_order_rule_customer" model="ir.rule">
            <field name="name">Order: Customer Own Orders</field>
            <field name="model_id" ref="model_marketplace_order"/>
            <field name="domain_force">[('customer_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_marketplace_customer'))]"/>
        </record>

    </data>
</odoo>