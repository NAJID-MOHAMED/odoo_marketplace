<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Marketplace User Group -->
        <record id="group_marketplace_user" model="res.groups">
            <field name="name">Marketplace User</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Marketplace Manager Group -->
        <record id="group_marketplace_manager" model="res.groups">
            <field name="name">Marketplace Manager</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_marketplace_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Marketplace Vendor Group -->
        <record id="group_marketplace_vendor" model="res.groups">
            <field name="name">Marketplace Vendor</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Record Rules -->
        <!-- Vendors can only see their own listings -->
        <record id="rule_product_listing_vendor" model="ir.rule">
            <field name="name">Vendors see own listings only</field>
            <field name="model_id" ref="odoo_marketplace.model_market_product_listing"/>
            <field name="domain_force">[('vendor_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('odoo_marketplace.group_marketplace_vendor'))]"/>
        </record>

        <!-- Vendors can only see their own orders -->
        <record id="rule_order_vendor" model="ir.rule">
            <field name="name">Vendors see own orders only</field>
            <field name="model_id" ref="odoo_marketplace.model_market_order"/>
            <field name="domain_force">[('order_line_ids.vendor_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('odoo_marketplace.group_marketplace_vendor'))]"/>
        </record>

        <!-- Global Rules -->
        <record id="rule_product_listing_public" model="ir.rule">
            <field name="name">Public product listings</field>
            <field name="model_id" ref="odoo_marketplace.model_market_product_listing"/>
            <field name="domain_force">[('state', '=', 'published')]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
        </record>
    </data>
</odoo>