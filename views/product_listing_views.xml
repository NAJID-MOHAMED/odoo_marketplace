<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Listing Tree View -->
    <record id="view_market_product_listing_tree" model="ir.ui.view">
        <field name="name">market.product.listing.tree</field>
        <field name="model">market.product.listing</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'published'" decoration-muted="state == 'archived'">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="product_tmpl_id"/>
                <field name="price"/>
                <field name="qty_available"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Product Listing Form View -->
    <record id="view_market_product_listing_form" model="ir.ui.view">
        <field name="name">market.product.listing.form</field>
        <field name="model">market.product.listing</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published,archived"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Listing Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="product_tmpl_id"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="qty_available"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Technical Information" name="technical">
                            <group>
                                <group>
                                    <field name="create_date"/>
                                    <field name="write_date"/>
                                </group>
                                <group>
                                    <field name="create_uid"/>
                                    <field name="write_uid"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Listing Kanban View -->
    <record id="view_market_product_listing_kanban" model="ir.ui.view">
        <field name="name">market.product.listing.kanban</field>
        <field name="model">market.product.listing</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="price"/>
                <field name="qty_available"/>
                <field name="state"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('market.product.listing', 'image', record.id.raw_value)" alt="Product Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="vendor_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><field name="price"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {
                                                   'draft': 'default',
                                                   'published': 'success',
                                                   'archived': 'muted'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Product Listing Search View -->
    <record id="view_market_product_listing_search" model="ir.ui.view">
        <field name="name">market.product.listing.search</field>
        <field name="model">market.product.listing</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="product_tmpl_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Published" name="published" domain="[('state','=','published')]"/>
                <filter string="Archived" name="archived" domain="[('state','=','archived')]"/>
                <group expand="0" string="Group By">
                    <filter string="Vendor" name="vendor" context="{'group_by': 'vendor_id'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Product Listing Action Window -->
    <record id="action_market_product_listing" model="ir.actions.act_window">
        <field name="name">Product Listings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">market.product.listing</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_market_product_listing_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first product listing!
            </p>
        </field>
    </record>
</odoo>