<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vendor Tree View -->
    <record id="view_market_vendor_tree" model="ir.ui.view">
        <field name="name">market.vendor.tree</field>
        <field name="model">market.vendor</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'validated'" decoration-danger="state == 'suspended'">
                <field name="name"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="rating" widget="float_rating"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vendor Form View -->
    <record id="view_market_vendor_form" model="ir.ui.view">
        <field name="name">market.vendor.form</field>
        <field name="model">market.vendor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,suspended"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Vendor Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="rating" widget="float_rating"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vendor Kanban View -->
    <record id="view_market_vendor_kanban" model="ir.ui.view">
        <field name="name">market.vendor.kanban</field>
        <field name="model">market.vendor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="rating"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="rating" widget="float_rating"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'validated': 'success', 'suspended': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vendor Search View -->
    <record id="view_market_vendor_search" model="ir.ui.view">
        <field name="name">market.vendor.search</field>
        <field name="model">market.vendor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Validated" name="validated" domain="[('state','=','validated')]"/>
                <filter string="Suspended" name="suspended" domain="[('state','=','suspended')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Account Manager" name="user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vendor Action Window -->
    <record id="action_market_vendor" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">market.vendor</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_market_vendor_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vendor!
            </p>
        </field>
    </record>
</odoo>