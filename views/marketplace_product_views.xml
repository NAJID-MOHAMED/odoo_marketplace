<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Product Tree View -->
        <record id="view_marketplace_product_tree" model="ir.ui.view">
            <field name="name">marketplace.product.tree</field>
            <field name="model">marketplace.product</field>
            <field name="arch" type="xml">
                <tree string="Products" decoration-success="state=='published'" 
                      decoration-danger="stock_status=='out_of_stock'"
                      decoration-warning="stock_status=='low_stock'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="vendor_id"/>
                    <field name="category_id"/>
                    <field name="list_price" widget="monetary"/>
                    <field name="discount_price" widget="monetary" 
                           invisible="has_discount == False"/>
                    <field name="qty_available"/>
                    <field name="stock_status" widget="badge"/>
                    <field name="sales_count"/>
                    <field name="average_rating" widget="progressbar"/>
                    <field name="state" widget="badge" 
                           decoration-success="state=='published'"
                           decoration-info="state=='pending'"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="has_discount" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Product Search View -->
        <record id="view_marketplace_product_search" model="ir.ui.view">
            <field name="name">marketplace.product.search</field>
            <field name="model">marketplace.product</field>
            <field name="arch" type="xml">
                <search string="Search Products">
                    <field name="name" string="Product" 
                           filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                    <field name="vendor_id"/>
                    <field name="category_id"/>
                    <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                    <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <separator/>
                    <filter string="Featured" name="featured" domain="[('featured', '=', True)]"/>
                    <filter string="On Sale" name="on_sale" domain="[('has_discount', '=', True)]"/>
                    <separator/>
                    <filter string="In Stock" name="in_stock" domain="[('stock_status', '=', 'in_stock')]"/>
                    <filter string="Low Stock" name="low_stock" domain="[('stock_status', '=', 'low_stock')]"/>
                    <filter string="Out of Stock" name="out_stock" domain="[('stock_status', '=', 'out_of_stock')]"/>
                    <separator/>
                    <filter string="Physical Products" name="physical" domain="[('product_type', '=', 'physical')]"/>
                    <filter string="Digital Products" name="digital" domain="[('product_type', '=', 'digital')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Vendor" name="group_vendor" context="{'group_by': 'vendor_id'}"/>
                        <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Stock Status" name="group_stock" context="{'group_by': 'stock_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Product Action -->
        <record id="action_marketplace_product" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">marketplace.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_marketplace_product_search"/>
            <field name="context">{'search_default_published': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new product
                </p>
                <p>
                    Add products to your marketplace catalog.
                </p>
            </field>
        </record>

        <!-- Product Form View -->
        <record id="view_marketplace_product_form" model="ir.ui.view">
            <field name="name">marketplace.product.form</field>
            <field name="model">marketplace.product</field>
            <field name="arch" type="xml">
                <form string="Product">
                    <header>
                        <button name="action_submit_approval" string="Submit" 
                                type="object" class="oe_highlight"
                                invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve &amp; Publish" 
                                type="object" class="oe_highlight"
                                invisible="state != 'pending'"
                                groups="odoo_marketplace.group_marketplace_manager"/>
                        <button name="action_reject" string="Reject" type="object"
                                invisible="state != 'pending'"
                                groups="odoo_marketplace.group_marketplace_manager"/>
            <button name="action_publish" string="Publish" type="object"
                invisible="state == 'published'"
                groups="odoo_marketplace.group_marketplace_manager"/>
                        <button name="action_unpublish" string="Unpublish" type="object"
                                invisible="state != 'published'"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,pending,published"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" 
                               options="{'preview_image': 'image_128'}"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_orders" type="object" 
                                    class="oe_stat_button" icon="fa-shopping-cart"
                                    invisible="sales_count == 0">
                                <field name="sales_count" widget="statinfo" 
                                       string="Sales"/>
                            </button>
                            <button name="action_view_reviews" type="object" 
                                    class="oe_stat_button" icon="fa-star">
                                <field name="review_count" widget="statinfo" 
                                       string="Reviews"/>
                            </button>
                <button name="%(odoo_marketplace.action_marketplace_product)d" type="action" 
                                    class="oe_stat_button" icon="fa-heart"
                                    invisible="featured == False">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Featured</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Product Name"/></h1>
                            <h3><field name="code" readonly="1"/></h3>
                        </div>
                        <group>
                            <group string="Basic Information">
                                <field name="vendor_id" options="{'no_create': True}"/>
                                <field name="category_id"/>
                                <field name="product_type"/>
                                <field name="active"/>
                                <field name="featured"/>
                            </group>
                            <group string="Pricing">
                                <field name="currency_id" invisible="1"/>
                                <field name="list_price" widget="monetary"/>
                                <field name="has_discount"/>
                                <field name="discount_percentage" 
                                       invisible="has_discount == False"/>
                                <field name="discount_price" widget="monetary" 
                                       invisible="has_discount == False"/>
                    <field name="cost_price" widget="monetary"
                        groups="odoo_marketplace.group_marketplace_manager"/>
                            </group>
                        </group>
                        <group>
                            <group string="Inventory">
                                <field name="stock_management"/>
                                <field name="qty_available"/>
                                <field name="low_stock_threshold"/>
                                <field name="stock_status" widget="badge"/>
                    <field name="product_tmpl_id" 
                        invisible="stock_management != 'automatic'"
                        groups="odoo_marketplace.group_marketplace_manager"/>
                            </group>
                            <group string="Dimensions" invisible="product_type != 'physical'">
                                <field name="weight"/>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                            </group>
                        </group>
                        <group string="Digital Product" invisible="product_type != 'digital'">
                            <field name="digital_file" filename="digital_filename"/>
                            <field name="digital_filename" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="short_description" placeholder="Short description for listings..."/>
                                <field name="description" widget="html" placeholder="Full product description..."/>
                            </page>
                            <page string="Sales Statistics">
                                <group>
                                    <group>
                                        <field name="sales_count"/>
                                        <field name="total_sold_qty"/>
                                    </group>
                                    <group>
                                        <field name="total_revenue" widget="monetary"/>
                                        <field name="average_rating" widget="progressbar"/>
                                    </group>
                                </group>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="meta_title"/>
                                    <field name="meta_description"/>
                                    <field name="meta_keywords"/>
                                </group>
                            </page>
                            <page string="Tags">
                                <field name="tag_ids" widget="many2many_tags" 
                                       options="{'color_field': 'color', 'no_create_edit': True}"/>
                            </page>
                            <page string="Notes" groups="odoo_marketplace.group_marketplace_manager">
                                <field name="internal_notes"/>
                                <field name="rejection_reason" 
                                       invisible="state != 'rejected'"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Product Kanban View -->
        <record id="view_marketplace_product_kanban" model="ir.ui.view">
            <field name="name">marketplace.product.kanban</field>
            <field name="model">marketplace.product</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="list_price"/>
                    <field name="discount_price"/>
                    <field name="has_discount"/>
                    <field name="state"/>
                    <field name="stock_status"/>
                    <field name="average_rating"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                             <img t-att-src="kanban_image('odoo_marketplace.product', 'image_1920', record.id.raw_value)" 
                                         alt="Product" class="o_image_64_cover"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        </div>
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {'published': 'success', 'pending': 'warning'}}"/>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_product_price">
                                            <t t-if="record.has_discount.raw_value">
                                                <span class="text-muted" style="text-decoration: line-through;">
                                                    <field name="list_price" widget="monetary"/>
                                                </span>
                                                <br/>
                                                <strong class="text-success">
                                                    <field name="discount_price" widget="monetary"/>
                                                </strong>
                                            </t>
                                            <t t-else="">
                                                <strong><field name="list_price" widget="monetary"/></strong>
                                            </t>
                                        </div>
                                        <div>
                                            <i class="fa fa-star text-warning"/> <field name="average_rating"/>
                                        </div>
                                        <div>
                                            <field name="stock_status" widget="badge"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        

        

    </data>
</odoo>