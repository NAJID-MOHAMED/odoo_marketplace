<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Category Tree View -->
		<record id="view_marketplace_category_tree" model="ir.ui.view">
			<field name="name">marketplace.category.tree</field>
			<field name="model">marketplace.category</field>
			<field name="arch" type="xml">
				<tree string="Categories">
					<field name="name"/>
					<field name="parent_id"/>
					<field name="sequence"/>
				</tree>
			</field>
		</record>

		<!-- Category Form View -->
		<record id="view_marketplace_category_form" model="ir.ui.view">
			<field name="name">marketplace.category.form</field>
			<field name="model">marketplace.category</field>
			<field name="arch" type="xml">
				<form string="Category">
					<sheet>
						<group>
							<field name="name"/>
							<field name="parent_id"/>
							<field name="sequence"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Category Search View -->
		<record id="view_marketplace_category_search" model="ir.ui.view">
			<field name="name">marketplace.category.search</field>
			<field name="model">marketplace.category</field>
			<field name="arch" type="xml">
				<search string="Search Categories">
					<field name="name"/>
					<field name="parent_id"/>
				</search>
			</field>
		</record>

		<!-- Category Action -->
		<record id="action_marketplace_category" model="ir.actions.act_window">
			<field name="name">Categories</field>
			<field name="res_model">marketplace.category</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_marketplace_category_search"/>
		</record>

	</data>
</odoo>

