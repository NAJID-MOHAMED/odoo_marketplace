<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Market Order Tree View -->
    <record id="view_market_order_tree" model="ir.ui.view">
        <field name="name">market.order.tree</field>
        <field name="model">market.order</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-warning="state == 'sale'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="state"/>
                <field name="amount_total" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Market Order Form View -->
    <record id="view_market_order_form" model="ir.ui.view">
        <field name="name">market.order.form</field>
        <field name="model">market.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
            <button name="action_confirm" string="Confirm Order" 
                type="object" class="btn-primary"/>
            <button name="action_cancel" string="Cancel" 
                type="object" />
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,sale,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date_order"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines" name="order_lines">
                            <field name="order_line_ids">
                                <tree editable="bottom">
                                    <field name="listing_id"/>
                                    <field name="vendor_id" readonly="1"/>
                                    <field name="product_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" sum="Subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer">
                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Market Order Search View -->
    <record id="view_market_order_search" model="ir.ui.view">
        <field name="name">market.order.search</field>
        <field name="model">market.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','sale')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <separator/>
                <filter string="My Orders" name="my_orders" 
                        domain="[('create_uid','=',uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="customer" 
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Status" name="status" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Order Date" name="order_month" 
                            context="{'group_by': 'date_order:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Market Order Kanban View -->
    <record id="view_market_order_kanban" model="ir.ui.view">
        <field name="name">market.order.kanban</field>
        <field name="model">market.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="state"/>
                <field name="amount_total"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="col-6 text-right">
                                    <field name="amount_total"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <field name="partner_id"/>
                                </div>
                                <div class="col-6 text-right">
                                    <field name="date_order" widget="date"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-right">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {
                                               'draft': 'default',
                                               'sale': 'warning',
                                               'done': 'success',
                                               'cancel': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Market Order Action Window -->
    <record id="action_market_order" model="ir.actions.act_window">
        <field name="name">Marketplace Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">market.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_market_order_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first marketplace order!
            </p>
        </field>
    </record>
</odoo>