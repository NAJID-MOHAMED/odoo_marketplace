<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Marketplace Order Tree View -->
        <record id="view_marketplace_order_tree" model="ir.ui.view">
            <field name="name">marketplace.order.tree</field>
            <field name="model">marketplace.order</field>
            <field name="arch" type="xml">
                <tree string="Marketplace Orders" decoration-success="state == 'done'">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="vendor_id"/>
                    <field name="order_date"/>
                    <field name="state"/>
                    <field name="amount_total" widget="monetary"/>
                </tree>
            </field>
        </record>

        <!-- Marketplace Order Form View -->
        <record id="view_marketplace_order_form" model="ir.ui.view">
            <field name="name">marketplace.order.form</field>
            <field name="model">marketplace.order</field>
            <field name="arch" type="xml">
                <form string="Marketplace Order">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                        <button name="action_cancel" string="Cancel" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,processing,shipped,delivered,done,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="order_date"/>
                            </group>
                            <group>
                                <field name="customer_id"/>
                                <field name="vendor_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Lines">
                               <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>    <!-- MUST come first -->
                                        <field name="product_name" readonly="1"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="subtotal" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Shipping &amp; Payment">
                                <group>
                                    <field name="shipping_method"/>
                                    <field name="shipping_cost" widget="monetary"/>
                                    <field name="payment_method"/>
                                    <field name="payment_status"/>
                                </group>
                            </page>
                        </notebook>
                        <group class="oe_subtotal_footer">
                            <field name="amount_total" widget="monetary"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Marketplace Order Search View -->
        <record id="view_marketplace_order_search" model="ir.ui.view">
            <field name="name">marketplace.order.search</field>
            <field name="model">marketplace.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="vendor_id"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Done" name="done" domain="[('state','=','done')]"/>
                </search>
            </field>
        </record>

        <!-- Marketplace Order Action Window -->
        <record id="action_marketplace_order" model="ir.actions.act_window">
            <field name="name">Marketplace Orders</field>
            <field name="res_model">marketplace.order</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_marketplace_order_search"/>
        </record>

    </data>
</odoo>